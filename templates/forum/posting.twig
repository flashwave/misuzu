{% extends 'forum/master.twig' %}
{% from 'forum/macros.twig' import forum_posting_form, forum_header %}

{% set title = 'Posting' %}

{% if posting_topic is defined %}
    {% set form_title = 'Replying » ' ~ posting_topic.topic_title %}
    {% set form_target_id = posting_topic.topic_id %}
{% else %}
    {% set form_title = 'Creating Topic » ' ~ posting_forum.forum_name %}
    {% set form_target_id = posting_forum.forum_id %}
{% endif %}

{% block content %}
    {{ forum_header('Creating Topic', posting_breadcrumbs) }}
    {{ forum_posting_form('<i class="fas fa-edit fa-fw"></i> ' ~ form_title, form_target_id, posting_topic is defined) }}
{% endblock %}
